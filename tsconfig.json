{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@framework/*" : ["./framework/*"],
      "@modules/*" : ["./modules/*"]
    },
    "removeComments": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017"],
    "types": ["@types/node"],
    "moduleResolution": "node"
  },
  "include": ["./**/*"],
  "exclude": []
}
