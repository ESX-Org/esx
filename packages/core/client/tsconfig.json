{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2017"],
    "types": ["@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*", "../common/**/*"],
  "exclude": ["**/node_modules", "**/spec/**"]
}